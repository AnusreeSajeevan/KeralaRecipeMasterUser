<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.keralarecipemaster.admin">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".RecipeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name="com.keralarecipemaster.admin.presentation.ui.view.AddRecipeActivity"
            android:exported="false" />
        <!-- android:theme="@style/Theme.KeralaRecipeMasterAdmin"> -->
        <activity
            android:name="com.keralarecipemaster.admin.presentation.ui.view.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.keralarecipemaster.admin.presentation.ui.view.AuthenticationActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.KeralaRecipeMasterAdmin" />
    </application>

</manifest>